{
    "name": "semperton/container",
    "description": "Dynamic PSR-11 dependency injection container with reflection based autowiring.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.2.0",
        "psr/container": "^1.1|^2.0"
    },
    "autoload": {
        "psr-4": {
            "Semperton\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Semperton\\Container\\Test\\": "tests/"
        }
    },
    "scripts": {
		"test": "phpunit tests",
        "check": "psalm"
	},
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7"
    }
}
